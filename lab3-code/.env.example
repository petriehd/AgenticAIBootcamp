# Langflow API Configuration
# Copy this file to .env and fill in your actual values

# Langflow API endpoint from Lab 2
LANGFLOW_API_URL=https://your-langflow-instance.com/api/v1/run/hr-agent-api

# Langflow API key for authentication
LANGFLOW_API_KEY=your_api_key_here

# Approval threshold (number of days)
# Requests exceeding this threshold will require human approval
APPROVAL_THRESHOLD_DAYS=5

# Debug mode (set to true to see detailed state information)
DEBUG=false